{% if product.metafields.custom.custom_finishes %}
    <h2 style='max-width: 1100px; margin-left: auto; margin-right: auto; padding: 10px;'>Custom Finishes</h2>
    {% assign finishes = product.metafields.custom.custom_finishes %}
    <div style="display: flex; flex-direction: row; flex-wrap: wrap;justify-content: center; margin-left: auto; margin-right: auto;">
            {% for finish in finishes.value %}
                {{ finish }}
                <div style="text-align: center; max-width: 320px; margin: 0 20px 0 20px; ">
                        <img src="{{ finish.url }}" alt="{{ finish.text }}" style="max-width: 100%;"/>
                        <p>{{ finish.value.text }}</p>
                </div>
            {% endfor %}
    </div>
{% endif %}
{% schema %}
{
  "name": "Custom Finishes",
  "settings": [],
  "presets": [{
    "name": "Custom Finishes"
  }],
  "templates": ["product"]
}
{% endschema %}
