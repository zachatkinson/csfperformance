<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="slider-grid">
    <div class="csf-slider-left">
      Left hand side of slider
      Left hand side of slider
      Left hand side of slider
      Left hand side of slider
      Left hand side of slider
      Left hand side of slider
    </div>
    <div class="csf-slider-right">
      Right hand side of slider
    </div>
  </div>
</div>
{% schema %}
{
  "name": "CSF Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.csf-slider.settings.include_margins.label"
    }
  ],
  "presets": [
    {
      "name": "CSF Slider"
    }
  ]
}
{% endschema %}
{% stylesheet %}
.slider-grid{
  display: grid;
  grid-template-columns: 1fr;
}
.csf-slider-left{
  background: pink;
  padding: 1em;
}
.csf-slider-right{
  background: red;
  padding: 1em;
}
@media screen and (min-width: 611px) {
  .slider-grid{
    grid-template-columns: 33% 1fr;
  }
}
{% endstylesheet %}
