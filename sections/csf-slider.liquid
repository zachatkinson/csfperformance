<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="slider-grid">
    <div class="csf-slider-left">
      {% for block in section.blocks %}
      {% if block.type == 'side-link' %}
        {{  block.settings.image | image_url: height: 100 | image_tag  }}
      {% endif %}
      {% endfor %}
    </div>
    <div class="csf-slider-right">
      {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        {{  block.settings.slide-image | image_url: height: 1200 | image_tag  }}
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "CSF Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.csf-slider.settings.include_margins.label"
    }
  ],
  "presets": [
    {
      "name": "CSF Slider"
    }
  ],
  "blocks": [
    {
      "name": "Side Link",
      "type": "side-link",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide-image",
          "label": "Slide Image"
        }
      ]
    }
  ]

}
{% endschema %}
{% stylesheet %}
.csf-slider-left img{
width: 100%;
height: auto;
}
.csf-slider-right img{
object-fit: cover;
width: 100%;
height: 100%;
}
.slider-grid{
  display: grid;
  grid-template-columns: 1fr;
}
.csf-slider-left{
  display: grid;
  grid-template-columns: 1fr 1fr;
order: 1;
}
.csf-slider-right{
order: 0;
}
@media screen and (min-width: 768px) {
  .slider-grid{
    grid-template-columns: 300px 1fr;
  }
  .csf-slider-left{
    grid-template-rows: 1fr;
    grid-template-columns: 1fr;
    order: 0;
  }
  .csf-slider-right{
    order: 1;
  }
}

{% endstylesheet %}
